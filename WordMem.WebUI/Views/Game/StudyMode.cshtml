@model IEnumerable<Word>
@{
    ViewData["Title"] = "LearnMode";
    Layout = "~/Views/Shared/_UserLayout.cshtml";

}

<div class="container">
    <div class="row">
        <p class="text-white-50">Study Mode</p>
    </div>
    <div class="row">
        <div class="mx-auto">
            <div class="card mt-3 tab-card">
                <div class="card-header tab-card-header">
                    <ul class="nav nav-tabs card-header-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link" id="one-tab" data-toggle="tab" href="#one" role="tab" aria-controls="One" aria-selected="true">Step One</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="two-tab" data-toggle="tab" href="#two" role="tab" aria-controls="Two" aria-selected="false">Step Two</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="three-tab" data-toggle="tab" href="#three" role="tab" aria-controls="Three" aria-selected="false">Step Three</a>
                        </li>
                    </ul>
                </div>
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active p-3" id="one" role="tabpanel" aria-labelledby="one-tab">
                        @await Html.PartialAsync("Game/Study/_StudyModeStepOne", Model)
                    </div>
                    <div class="tab-pane fade p-3" id="two" role="tabpanel" aria-labelledby="two-tab">
                        @await Html.PartialAsync("Game/Study/_StudyModeStepTwo", Model)
                    </div>
                    <div class="tab-pane fade p-3" id="three" role="tabpanel" aria-labelledby="three-tab">
                        @await Html.PartialAsync("Game/Study/_StudyModeStepThree", Model)

                        <form asp-action="SaveAsStudied" asp-controller="Word" method="post" class="mt-3">
                            @foreach (var item in Model)
                            {
                                <input type="hidden" name="wordId" value="@item.WordId" />
                            }

                            <input class="btn btn-block btn-success" type="submit" name="name" value="Save As Studied" />
                        </form>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>










