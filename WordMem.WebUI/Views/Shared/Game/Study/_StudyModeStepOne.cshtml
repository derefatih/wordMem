@model IEnumerable<Word>
@{
    var active = "";
    var i = 0;
    var k = 0;
}

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-interval="false" data-wrap="false">
    <ol class="carousel-indicators">
        @foreach (var item in Model)
        {
            if (i == 0)
            {
                active = "active";
            }
            <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="@active"></li>

            i++;
        }
    </ol>
    <div class="carousel-inner bg-light">

        @foreach (var item in Model)
        {
            if (k == 0)
            {
                active = "active";
            }
            else
            {
                active = "";
            }


            <div class="carousel-item  mt-3 @active">
                <div class="card text-white bg-gray mb-3 mx-auto" style="width: 18rem; height: 25rem">

                    <div class="card-body">
                        <button class="btn btn-default btn-block" data-toggle="collapse" data-target="#collapseExample_@k" aria-expanded="false" aria-controls="collapseExample_@k">

                            @item.ForeignLang
                        </button>
                        <div class="collapse" id="collapseExample_@k">
                            <div class="card card-body text-blue">
                                <img class="card-img-top w-75 mt-3 mx-auto" src="~/images/@item.Image">
                                <p class="card-text"><b>Translation :</b>@item.OwnLang</p>
                                <p class="card-text"> <b>Sample Sentence :</b>@item.SampleSentence</p>
                            </div>
                        </div>


                    </div>
                </div>
            </div>
            k++;
        }

    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>



