@model IEnumerable<Word>
@{
    var active = "";
    var i = 0;
    var k = 0;
}

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-interval="false" data-wrap="false">
    <ol class="carousel-indicators">
        @foreach (var item in Model)
        {
            if (i == 0)
            {
                active = "active";
            }
            <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="@active"></li>

            i++;
        }
    </ol>
    <div class="carousel-inner bg-light">

        @foreach (var item in Model)
        {
            if (k == 0)
            {
                active = "active";
            }
            else
            {
                active = "";
            }


            <div class="carousel-item  mt-3 @active">
                <div class="card text-white bg-gray mb-3 mx-auto" style="width: 18rem; height: 25rem">

                    <div class="card-body">
                        <span class="btn btn-default btn-block">
                            @item.ForeignLang
                        </span>
                        <span>
                            <input type="text" name="name" value="" maxlength="@item.OwnLang.Length" />
                        </span>
                    </div>
                </div>
            </div>
            k++;
        }

    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>



