@model IEnumerable<CategoryListDTO>


@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col">
            <div class="card shadow">

                <div class="card-header border-0">
                    <div class="row">
                        <div class="col-6">
                            <h3 class="mb-0">Word Categories</h3>
                        </div>
                        <div class="col-6 ">
                            <a asp-action="Create" asp-controller="Category" class="btn btn-icon btn-2 btn-success float-right">
                                <span class="btn-inner--icon"><i class="ni ni-fat-add"></i></span>
                                Add Category
                            </a>
                        </div>
                    </div>

                </div>
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col">Category (Total/Learned)</th>
                                <th scope="col">Completed</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {

                                <tr>

                                    <th scope="row">
                                        <div class="media align-items-center">
                                            <div class="media-body">
                                                <a class="btn btn-icon btn-3 btn-secondary btn-sm" asp-action="List" asp-controller="Word" asp-route-id="@item.CategoryId">
                                                    <span class="mb-0 text-sm">@item.CategoryName </span>
                                                    <span class="badge badge-pill badge-primary text-sm">(@item.TotalCount/@item.LearnedCount)</span>
                                                </a>
                                            </div>
                                        </div>
                                    </th>

                                   <td>
                                            <div class="d-flex align-items-center">
                                                <span class="mr-2">@item.Percentage%</span>
                                                <div>
                                                    <div class="progress">
                                                        <div class="progress-bar bg-warning" role="progressbar" aria-valuenow="@item.Percentage" aria-valuemin="0" aria-valuemax="100" style="width: @item.Percentage%;"></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                   <td>
                                       <a class="btn btn-icon btn-3 btn-info btn-sm" data-toggle="tooltip" data-placement="top" title="Start Study Mode" asp-action="StudyMode" asp-controller="Game" asp-route-categoryId="@item.CategoryId">
                                           <span class="btn-inner--icon"><i class="ni ni-button-play"></i></span>
                                       </a>
                                       <a class="btn btn-icon btn-3 btn-success btn-sm" data-toggle="tooltip" data-placement="top" title="Start Check Mode">
                                           <span class="btn-inner--icon" ><i class="ni ni-check-bold"></i></span>
                                       </a>
                                       <div class="dropdown">
                                           <a class="btn btn-sm btn-icon-only text-light" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                               <i class="fas fa-ellipsis-v"></i>
                                           </a>
                                           <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                                               <a class="dropdown-item" asp-action="Edit" asp-controller="Category" asp-route-id="@item.CategoryId">Edit</a>
                                               <a class="dropdown-item bg-danger" data-toggle="modal" data-target="#modal-notification" asp-action="Delete" asp-controller="Category" asp-route-id="@item.CategoryId">Delete</a>
                                           </div>
                                       </div>
                                   </td>
                                 

                                </tr>

                            }


                        </tbody>
                    </table>
                </div>
                <div class="card-footer py-4">
                    <nav aria-label="...">
                        <ul class="pagination justify-content-end mb-0">
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1">
                                    <i class="fas fa-angle-left"></i>
                                    <span class="sr-only">Previous</span>
                                </a>
                            </li>
                            <li class="page-item active">
                                <a class="page-link" href="#">1</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
                            </li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">
                                    <i class="fas fa-angle-right"></i>
                                    <span class="sr-only">Next</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modal-notification" tabindex="-1" role="dialog" aria-labelledby="modal-notification" aria-hidden="true">
    <div class="modal-dialog modal-danger modal-dialog-centered modal-" role="document">
        <div class="modal-content bg-gradient-danger">

            <div class="modal-header">
                <h6 class="modal-title" id="modal-title-notification">Your attention is required</h6>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>

            <div class="modal-body">

                <div class="py-3 text-center">
                    <i class="ni ni-bell-55 ni-3x"></i>
                    <h4 class="heading mt-4">You should read this!</h4>
                    <p>Are you sure you want to delete this category? if you delete this category you will not access your words in this category!</p>
                </div>

            </div>

            <div class="modal-footer">
                <a class="btn btn-danger" id="GotIt">Ok, Got it</a>
                <button type="button" class="btn btn-link text-white ml-auto" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>
@section Scripts
    {
    <script>
        $(document).ready(function () {
            $('.dropdown-item.bg-danger').each(function () {
                var $this = $(this);
                $this.on("click", function () {
                    $('#GotIt').attr("href", $(this).attr('href'));
                });
            });
        });
    </script>
}
